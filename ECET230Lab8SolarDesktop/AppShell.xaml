<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ECET230Lab8SolarDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ECET230Lab8SolarDesktop"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="RawData"
             Route="RawData">
            <ShellContent ContentTemplate="{DataTemplate local:RawData}" />
        </Tab>
        <Tab Title="Solar Control"
             Route="SolarControl">
            <ShellContent ContentTemplate="{DataTemplate local:SolarControl}" />
        </Tab>
    </TabBar>

</Shell>

